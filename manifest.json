{
  "manifest_version": 3,
  "name": "qrl",
  "version": "1.0.0",
  "description": "Generate QR codes for the current tab's URL and copy to clipboard",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
